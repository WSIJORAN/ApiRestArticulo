<div class="hero-unit">
    <h2>Articulos</h2>
    <div>
        <table id="tblList" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Costo</th>
                    <th>Referencia</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <h2>Seleccione Alguna</h2>
    <div>
        <ul>
            <li>
                <label>Id:</label>
                <input type="text" id="txtIdSearch" />
                <input type="button" id="btnSearch" value="Search" />
            </li>
            <li>
                <label>Producto:</label>
                <input type="text" id="txtProducto" />
            </li>
            <li>
                <label>Costo:</label>
                <input type="text" id="txtCosto" />
            </li>
            <li>
                <label>Referencia:</label>
                <input type="text" id="txtReferencia" />
            </li>
            <li>
                <input type="button" id="btnCreate" value="Crear" />
                <input type="button" id="btnDelete" value="Eliminar" />
                <input type="button" id="btnUpdate" value="Actualizar" />
            </li>
        </ul>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/app/articulo.js")"></script>
}

